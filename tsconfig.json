{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": ["es2017", "es7", "es6", "dom"],
        "declaration": true,
        "strict": true,
        "esModuleInterop": true,
        "rootDir": "src",
        "outDir": "dist",
        "types": ["node"],
        "moduleResolution": "node",   
        "baseUrl": "./", 
        "paths": {
            "@model/*": ["./src/models/*"],
            "@/*": ["./src/*"]
        }
    },
    "exclude": [
      "node_modules",
      "dist"
    ]
}